<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/orderItemId"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="23dp"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/orderSelectedQuantity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="23dp"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/orderItemName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="23dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/orderItemPrice"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/orderItemName"
        android:padding="5dp"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/orderItemQuantity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/orderItemPrice"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:textAlignment="textEnd"
        android:textSize="23dp"
        android:textStyle="bold" />
</RelativeLayout>